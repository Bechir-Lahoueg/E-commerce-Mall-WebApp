{% extends 'base.html.twig' %}

{% block body %}
    <div class="invoice-container">
        <div class="m-5">
            {% include "_partials/_btn_go_back.html.twig" %}
            <div class="row">
        <h1>Invoice</h1>

        <div class="order-details">
            <h2>Order Details</h2>
            <p><strong>Order Reference:</strong> {{ order.getReference() }}</p>
            <p><strong>Order Date:</strong> {{ order.getCreatedAt()|date('Y-m-d H:i:s') }}</p>
            <h2>Order Details</h2>
            <p><strong> Name:</strong> {{ order.getUsers().getFullName }}</p>
            <p><strong> Name:</strong> {{ order.getUsers().getEmail }}</p>
            <p><strong> Name:</strong> {{ order.getUsers().getPhone }}</p>
            <p><strong> Adresse :</strong> {{ order.getUsers().getAddress }} {{ order.getUsers().getCity }} {{ order.getUsers().getZipcode }}</p>
        </div>

        <div class="products-table">
            <h3>Products</h3>
            <table>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    {% for orderDetail in orderDetails %}
                        <tr>
                            <td>{{ orderDetail.getProducts().getName() }}</td>
                            <td>{{ orderDetail.getQuantity() }}</td>
                            <td>{{ orderDetail.getPrice() }}</td>
                            <td>{{ orderDetail.getTotal() }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

      
        <div class="total-amount">
            <p><strong>Total Amount:</strong> {{ order.getTotalAmount() }}</p>
        </div>

        {# Add other details as needed #}
    </div>

  


    <style>
        .invoice-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .order-details,
        .products-table,
        .total-amount {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        p {
            margin: 8px 0;
        }
    </style>
{% endblock %}
