{% block csrf_token %}
    <meta name="csrf-token" content="{{ csrf_token('token_name') }}">
{% endblock %}

{{ form_start(form) }}
<div class="mb-3">
    {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Phone'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Address'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.zipcode, {'attr': {'class': 'form-control', 'placeholder': 'Zip Code'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.city, {'attr': {'class': 'form-control', 'placeholder': 'City'}}) }}
</div>

<div class="mb-3" style="display: none">
    {{ form_row(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'plainpassword' }}) }}
</div>









<div class="d-flex align-items-center justify-content-start mt-3">
    <button type="submit" class="btn btn-info btn-user">
        {{ button_label|default('Add') }}
    </button>
</div>

{{ form_end(form) }}
