{% block csrf_token %}
    <meta name="csrf-token" content="{{ csrf_token('token_name') }}">
{% endblock %}

{{ form_start(subcategoriesForm) }}
<div class="form-group row">
    {{ form_row(subcategoriesForm.categories, {'attr': {'class': 'col-sm-6'}}) }}
</div>
<div class="form-group row">
    {{ form_row(subcategoriesForm.name, {'attr': {'class': 'col-sm-6'}}) }}
</div>
<div class="form-group row">
    {{ form_row(subcategoriesForm.photo, {'attr': {'class': 'col-sm-6'}}) }}
</div>







<div class="d-flex align-items-center justify-content-start mt-3">
    <button type="submit" class="btn btn-info btn-user">
        {{ button_label|default('Add') }}
    </button>
</div>

{{ form_end(subcategoriesForm) }}
