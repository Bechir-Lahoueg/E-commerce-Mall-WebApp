{# templates/profile.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}






{% block body %}
    <style>

        .custom-shadow {
            box-shadow: 0.5rem 0.5rem 0.5rem 0.5rem  rgba(173, 216, 230, 0.2);
        }
        .progress-circle {
            position: relative;
            width: 100px;
            height: 100px;
        }

        .progress-circle-svg {
            transform: rotate(-90deg);
        }

        .progress-circle-background {
            fill: none;
            stroke: #ddd; /* Background color */
            stroke-width: 6;
        }

        .progress-circle-bar {
            fill: none;
            stroke: rgb(255, 0, 0); /* Progress color */
            stroke-width: 6;
            stroke-dasharray: 0;
            stroke-dashoffset: 0;
            transition: stroke-dasharray 0.5s ease;
        }

        .progress-circle-label {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 16px;
            font-weight: bold;
        }

    </style>

    <div class="container-fluid ">

        <div class="row  ">
            <div class="col-2 mt-5 mr-4 custom-shadow  ">   </div>

                <div class="col mt-2">
                    {% if is_granted("ROLE_LINKER") %}
                    <p>
                    <p class="">
                        Gains Totaux : <strong>{{ earning }} DTN</strong>
                        &nbsp;&nbsp; Solde Courant :&nbsp;<strong>{{ solde }} DTN</strong>
                    </p>
                    </p>

{% endif %}
                    <div class="row mt-1">
                            <div class="card col-md-8 mt-2  custom-shadow">
                                <div class="container-fluid ">

                                        <div class="row ">
                                            <div class="col-4">
                                                <div class="card-body m-2   ">
                                                    Aujourd'hui : {{ currentDate }}

                                                </div>
                                            </div>

                                            <div class="card-body col-7 mr-5 mt-4 text-center ">
                                                {% if is_granted("ROLE_LINKER") %}
                                                <a class="btn  btn-google d-inline custom-shadow ml-4 " href="{{ path('profile_link', {'id': app.user.id}) }}"> <i class=" fas fa-solid fa-users"></i> Mon Réseau</a>
                                                {% endif %}
                                                <a class="btn  btn-facebook d-inline custom-shadow  ml-4 " href=" {{ path('orders_index', {'id': app.user.id}) }}"> <i class=" fas fa-solid fa-box-open"></i> Mes ordres </a>
                                            </div>

                                        </div>
                                    {% if is_granted("ROLE_LINKER") %}
                                        <div class="row">
                                            <div class="row mt-1 justify-content-center">
                                                <div class="col-md-3 ml-2 mb-4">
                                                    <div class="card text-center h-100 custom-shadow">
                                                        <div class="card-header bg-gradient-primary h-100 text-white">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <h6>Vente personal </h6>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer">
                                                            <strong>  {{ totalConsumption }} DTN</strong>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3 ml-2 mb-4">
                                                    <div class="card text-center h-100 custom-shadow">
                                                        <div class="card-header   bg-gradient-danger  h-100 text-white">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <h6>Vente personal mensuel </h6>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <strong class="text-info-emphasis">{{ monthlyConsumption }} DTN </strong>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3 ml-2 mb-4">
                                                    <div class="card text-center h-100 custom-shadow">
                                                        <div class="card-header bg-gradient-info h-100 text-white text-center">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <h6> Comission Personal </h6>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer">

                                                                    <strong class="text-danger-emphasis">{{  orderCommission }} DTN </strong>


                                                        </div>
                                                    </div>
                                                </div>
                                                    <div class="col-md-3 ml-2 mb-4">
                                                        <div class="card text-center h-100 custom-shadow">
                                                            <div class="card-header  bg-gradient-dark  text-white">
                                                                <div class="row">
                                                                    <div class="col">
                                                                        <h6>Vente de l'équipe </h6>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="card-footer">
                                                                <strong class="text-danger-emphasis">{{  teamConsumption }} DTN </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <div class="col-md-3 ml-2 mb-4">
                                                    <div class="card text-center h-100 custom-shadow">
                                                        <div class="card-header bg-gradient-dark  text-white">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <h6>Vente d'équipe mensuel</h6>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer">
                                                            <strong class="text-danger-emphasis">{{  monthlyTeamConsumption }} DTN </strong>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3 ml-2 mb-4">
                                                    <div class="card text-center h-100 custom-shadow">
                                                        <div class="card-header bg-gradient-info     text-white">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <h6>Commison Résaux </h6>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer">
                                                            <strong class="text-danger-emphasis">{{  parentCommission }} DTN </strong>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>





                                    {% endif %}

                                </div>



                            </div>


                            <div class="col mt-2">
                                <div class="container-fluid">
                                    <div class="card text-center h-100 custom-shadow">
                                        <div class="row">
                                            {% if is_granted("ROLE_LINKER") %}
                                            <div class="row justify-content-center mt-4">
                                                <div class="col-6 ">
                                                    <div class="card text-center h-100 custom-shadow ">
                                                        <strong class="text-info-emphasis"> Grade: {{ currentGrade }} </strong>
                                                    </div>
                                                </div>
                                                {% endif %}
                                            <div class="row mt-lg-4 m-auto justify-content-center">
                                                {% if app.user.imageFileName %}
                                                    <img class="img-fluid rounded-circle custom-shadow " src="{{ asset('assets/uploads/' ~ app.user.imageFileName ) }}" alt="Profile Image" style="width: 180px; height: 150px;">
                                                {% else %}
                                                    <p>No profile image available.</p>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <p> <i class="fa fa-user"> </i> <strong>{{ app.user.getFullname() }} </strong> </p>
                                            <p> <i class="fa fa-envelope"> </i> <strong>{{ app.user.getEmail() }} </strong> </p>
                                            <p> <i class="fa fa-phone-volume"> </i> <strong>{{ app.user.getPhone() }} </strong> </p>
