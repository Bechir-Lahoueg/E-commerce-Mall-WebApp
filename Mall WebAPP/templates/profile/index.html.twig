                                                            </div>

                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-3"></div>
                                                            <div class="col-6 justify-content-center">
                                                                <div class="card text-center mb-3 h-100 custom-shadow ">
                                                                    <a class="btn btn-danger d-inline" href="{{ path('app_register_linker', {'referralCode': referralCode}) }}">
                                                                        <i class="fa fa-plus "></i> <strong>Ajouter Linker</strong>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                    </div>
                                                </div>

                                </div>




                                    </div>
                                    </div>
                                        {% endif %}


                    {% if is_granted("ROLE_LINKER") %}}
                    <div class="row ">

                        <div class="col-2 card m-2 custom-shadow">
                            <div class="  mt-2 container-fluid ">
                            <div class="d-flex flex-column align-items-center mt-2">
                                <div class="row mt-2">
                                    <h3>Parent</h3>
                                </div>
                                <div class="row ">
                                    {% if app.user.parent %}
                                        <div class="col-md-12 text-center">
                                            {% if app.user.parent.imageFileName %}
                                                <img class="img-fluid rounded-circle custom-shadow m-2" src="{{ asset('assets/uploads/' ~ app.user.parent.imageFileName) }}" alt="Profile Image" style="width: 80px; height: 80px;">
                                            {% else %}
                                                <p>No profile image available.</p>
                                            {% endif %}
                                            <h5 class="text-center "> {{ app.user.parent.getFullname()}}  </h5>
                                        </div>

                                    {% else %}
                                        <div class="col-md-12 text-center">
                                            <p>No parent information available</p>
                                        </div>
                                    {% endif %}

                                </div>
                            </div>
                            </div>
                        </div>

                        <div class=" col mt-2">

                            <div class=" card custom-shadow  m-2 mr-4">
                                <div class="container-fluid  mt-2">
                                <h3>Enfants</h3>
                                    <div class="d-flex flex-wrap ">
                                        {% for generationIndex, generation in allGenerations %}
                                            {% if generationIndex == 1 %}
                                                {% for user in generation %}
                                                    {# Skip the current user #}
                                                    {% if user != app.user %}
                                                        <div class="card m-2 align-items-center border-0" style="width: 150px;">
                                                            {% if user.imageFileName %}
                                                                <img class="img-fluid rounded-circle custom-shadow align-items-center m-2" src="{{ asset('assets/uploads/' ~ user.imageFileName) }}" alt="Profile Image" style="width: 80px; height: 80px;">
                                                            {% else %}
                                                                <p>No profile image available.</p>
                                                            {% endif %}
                                                            <a href="{{ path('profile_user_viste', {'id': user.id}) }}">
                                                                <h8 class="text-center mt-2 d-flex align-items-center justify-content-center">{{ user.getFullname() }}</h8>
                                                            </a>
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                            {% endif %}
                                        {% endfor %}

                            </div>
                        </div>
                    </div>
                        </div>
                        {% endif %}
             </div>
                </div>
        </div>
        </div>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var progressCircle = document.querySelector(".progress-circle");
            var progressCircleBar = document.querySelector(".progress-circle-bar");
            var progressPercentage = parseFloat(progressCircle.getAttribute("data-progress")) || 0;
            var circumference = 2 * Math.PI * 45; // Circumference of a circle with radius 45

            var updateProgress = function () {
                var dashOffset = circumference * (1 - progressPercentage / 100);
                progressCircleBar.style.strokeDasharray = circumference;
                progressCircleBar.style.strokeDashoffset = dashOffset;
            };

            updateProgress();
        });
    </script>


